    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">ConnectBank API</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/homepage">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/aboutus">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/currencyxchange"> Our Rates</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/contactus">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/login">Log In/Sign Up</a>
                </li>
            </ul>
        </div>
    </nav>
 
    <div class="container container-custom"> 
        <div class="header"> 
            <h1>CBAPI Converter</h1> 
        </div> 
        <div class="rate"> 
            <div class="currency"> 
                <label for="amountInput">Amount (SGD):</label> 
                <input type="number" id="amountInput" class="form-control" placeholder="Enter amount"> 
            </div> 
        </div> 
        <div class="rate"> 
            <div class="currency"> 
                <label for="currencySelect">Convert to:</label> 
                <select id="currencySelect" class="form-control"> 
                    <option value="0.74">USD - US Dollar</option> 
                    <option value="0.64">EUR - Euro</option> 
                    <option value="0.55">GBP - British Pound</option> 
                    <option value="1.00">SGD - Singapore Dollar</option> 
                    <option value="0.98">CAD - Canadian Dollar</option> 
                    <option value="0.97">AUD - Australian Dollar</option> 
                    <option value="5.75">HKD - Hong Kong Dollar</option> 
                    <option value="81.66">JPY - Japanese Yen</option> 
                    <option value="0.70">CHF - Swiss Franc</option> 
                    <option value="4.77">CNY - Chinese Yuan</option> 
                    <option value="54.42">INR - Indian Rupee</option> 
                    <option value="2.76">SAR - Saudi Riyal</option> 
                    <option value="0.23">BHD - Bahraini Dinar</option> 
                    <option value="3.29">MYR - Malaysian Ringgit</option> 
                    <option value="2.67">QAR - Qatari Riyal</option> 
                    <option value="0.74">AED - United Arab Emirates Dirham</option> 
                    <option value="17.01">MXN - Mexican Peso</option> 
                    <option value="82.98">NGN - Nigerian Naira</option> 
                    <option value="828.83">KRW - South Korean Won</option> 
                    <option value="55.98">PKR - Pakistani Rupee</option> 
                    <option value="27.34">THB - Thai Baht</option> 
                    <option value="6.38">NOK - Norwegian Krone</option> 
                    <option value="7.55">SEK - Swedish Krona</option> 
                    <option value="6.39">DKK - Danish Krone</option> 
                    <option value="12.58">ZAR - South African Rand</option> 
                    <option value="1.05">NZD - New Zealand Dollar</option> 
                    <option value="11.70">EGP - Egyptian Pound</option> 
                    <option value="20.08">UAH - Ukrainian Hryvnia</option> 
                    <option value="9.18">TRY - Turkish Lira</option> 
                    <option value="3.72">BRL - Brazilian Real</option> 
                    <option value="70.74">ARS - Argentine Peso</option> 
                    <option value="10596.30">IDR - Indonesian Rupiah</option> 
                    <option value="0.22">KWD - Kuwaiti Dinar</option> 
