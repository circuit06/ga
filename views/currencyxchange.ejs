                    <option value="91.00">ISK - Icelandic Krona</option> 
                </select> 
            </div> 
        </div> 
        <div class="rate"> 
            <div class="currency"> 
                <label for="convertedAmount">Converted Amount:</label> 
                <input type="text" id="convertedAmount" class="form-control" readonly placeholder="Converted amount"> 
            </div> 
        </div> 
        <div class="button-container"> 
            <button onclick="convertCurrency()">Convert</button> 
        </div> 
    </div> 
     
    <script> 
        function convertCurrency() { 
            const currencySelect = document.getElementById('currencySelect'); 
            const amountInput = document.getElementById('amountInput').value; 
            const conversionRate = currencySelect.value; 
            const convertedAmount = amountInput * conversionRate; 
            const selectedCurrencyText = currencySelect.options[currencySelect.selectedIndex].text; 
            document.getElementById('convertedAmount').value = `${convertedAmount.toFixed(2)} (${selectedCurrencyText})`; 
        } 
    </script> 
     
